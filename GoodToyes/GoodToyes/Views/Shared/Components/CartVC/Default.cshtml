@model List<GoodToyes.ViewModels.CartItemViewModel>

<div>
    <h1 class="pad-bottom-xs is-size-4 has-text-centered">Your Cart:</h1>
    <div class="pads-xs">
        @foreach (var item in Model)
        {
            <span class="is-size-5">@item.ProductName</span>
            <span class="has-text-success">@item.ProductPrice</span>
        }
    </div>
    <div class="buttons is-centered pad-bottom-s">
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-success" type="submit">View Cart</button>
            </div>
        </div>
    </div>
</div>