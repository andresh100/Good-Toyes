@model GoodToyes.Models.Cart
@{
    Layout = "_Layout";
    var cartItems = Model.CartItems.ToList();
    
}
<section class="container center">
    <div class="pads-xs">
        <article class="media">
            <div class="media-content hide-overflow pad-top-s">
                <div class="content">
                    <div class="columns is-size-4 is-size-6-mobile is-mobile">
                        <div class="column is-3 is-2-mobile">
                            <strong>Product</strong>
                        </div>
                        <div class="column is-2">
                            <strong>Price</strong>
                        </div>
                        <div class="column is-2">
                            <strong>Quantity</strong>
                        </div>
                        <div class="column is-2 has-text-right">
                            <strong>Total</strong>
                        </div>
                    </div>
                </div>
            </div>
        </article>

        @foreach (var item in cartItems)
        {
            <article class="media">
                <div class="media-content hide-overflow">
                    <div class="content">
                        <form asp-action="UpdateCartItem" asp-route-id="@item.ID">
                            <div class="columns is-mobile">
                                <div class="column pad-top-s is-3 is-2-mobile">
                                    <strong>@item.Product.Name</strong>
                                </div>
                                <div class="column is-2">
                                    $@item.Product.Price
                                </div>
                                <div class="column is-2">
                                    @item.Quantity
                                </div>
                                <div class="column is-2 has-text-right">
                                    <span class="is-pushed-right">(@item.Product.Price x @item.Quantity) = <strong class="has-text-success">$@item.Total</strong></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </article>
        }
    </div>
</section>
<section>
    <div class="pads-xs">
        <hr />
    </div>
    <div>
        <form>
            <select name="cardNumber" value="" class="dropdown">
                <option value="370000000000002">370000000000002</option>
                <option value="6011000000000012">6011000000000012</option>
                <option value="4111111111111111">4111111111111111</option>
                <option value="5424000000000015">5424000000000015</option>
            </select>
        </form>
    </div>
    <div class="pads-xs">
        <hr />
    </div>
    <div class="buttons is-centered pad-bottom-m">
        <span class="pad-right-s is-size-3 is-size-5-mobile"><strong>Grand Total:</strong> <span class="has-text-success">@Model.GrandTotal</span></span>
        <a asp-action="RunPayment" class="button is-success is-large">SUBMIT</a>
    </div>
</section>