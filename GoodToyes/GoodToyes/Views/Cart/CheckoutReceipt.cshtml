@model GoodToyes.Models.Cart
@{
    Layout = "_Layout";
    var cartItems = Model.CartItems.ToList();
    decimal total = 0m;
    foreach (var item in cartItems)
    {
        total += item.Product.Price;
    }
}
<div class="container center pads-s">
    <article class="media">
        <div class="media-content hide-overflow pad-top-s">
            <div class="content">
                <div class="columns is-size-4 is-size-6-mobile is-mobile">
                    <div class="column is-4 is-1-mobile">
                        <strong>Product</strong>
                    </div>
                    <div class="column is-2 is-1-mobile">
                        <strong>Price</strong>
                    </div>
                    <div class="column is-2 is-1-mobile has-text-centered">
                        <strong>Quantity</strong>
                    </div>
                    <div class="column is-6 is-1-mobile has-text-centered">
                        <strong class="pad-right-s">Total</strong>
                    </div>
                </div>
            </div>
        </div>
    </article>

    @foreach (var item in cartItems)
    {
     <article class="media">
         <div class="media-content hide-overflow">
             <div class="content">
                 <div class="columns is-mobile">
                     <div class="column pad-top-s is-4 is-1-mobile">
                         <strong>@item.Product.Name</strong>
                     </div>
                     <div class="column is-2 is-1-mobile">
                         $@item.Product.Price
                     </div>
                     <div class="column is-2 is-1-mobile has-text-centered">
                         @item.Quantity
                     </div>
                     <div class="column is-6 has-text-centered">
                         <strong class="has-text-success pad-right-s">$@item.Total</strong>
                     </div>
                 </div>
             </div>
         </div>
     </article>
    }
</div>
<div class="pads-xs">
    <hr />
</div>
<div class="buttons is-centered pad-bottom-xs">
    <span class="pad-right-s is-size-3 is-size-5-mobile"><strong>Grand Total:</strong> <span class="has-text-success">@total</span></span>
</div>
<div class="center is-size-3 is-size-5-mobile pad-bottom-s">
    <a asp-controller="Cart" asp-action="BackToShop" class="">Back Home</a>
</div>
