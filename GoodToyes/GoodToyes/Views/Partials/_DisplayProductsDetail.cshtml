@using GoodToyes.Models.Interfaces
@inject IProduct ProductManager
@{
    var products = await ProductManager.GetProducts();
}
<div class="pad-top-xs pad-bottom-s container-xl product-container space-around auto-margin center">
    @foreach (var product in products)
    {
        <div class="pads-xs">
            <img src="@product.Image" class="product-img" />
            <ul>
                <li class="text-container">@product.Name</li>
                <li>$@product.Price</li>
            </ul>
        </div>
    }
</div>