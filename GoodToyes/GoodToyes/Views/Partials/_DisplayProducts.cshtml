@using GoodToyes.Models.Interfaces
@inject IProduct ProductManager
@{
    var products = await ProductManager.GetProducts();
}
<div class="pad-top-xs pad-bottom-s container-xl flex-row-container space-around auto-margin center">
    @foreach (var product in products)
    {
        <div class="pads-xs">
            <img src="@product.Image" class="product-img" />
        </div>
    }
</div>